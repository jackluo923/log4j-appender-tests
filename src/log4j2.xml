<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="com.yscope.test.log4j">
    <Appenders>
        <CLPAppenderImpl name="CompressedLogAppender">
            <PatternLayout pattern=" %-5level - %msg%n"/>
<!--            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>-->
        </CLPAppenderImpl>

        <File name="FileLogAppender1" fileName="logs/immediateFlushTrue.log" immediateFlush="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </File>

        <File name="FileLogAppender2" fileName="logs/immediateFlushTrue.log" immediateFlush="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="CompressedLogAppender"/>
        </Root>
    </Loggers>
</Configuration>